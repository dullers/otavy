<h1>Listing trip_details</h1>

<table>
  <thead>
    <tr>
      <th>Trip</th>
      <th>Index</th>
      <th>Name</th>
      <th>Description</th>
      <th>Duration</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_details.each do |trip_detail| %>
      <tr>
        <td><%= trip_detail.trip_id %></td>
        <td><%= trip_detail.index %></td>
        <td><%= trip_detail.name %></td>
        <td><%= trip_detail.description %></td>
        <td><%= trip_detail.duration %></td>
        <td><%= link_to 'Show', trip_detail %></td>
        <td><%= link_to 'Edit', edit_trip_detail_path(trip_detail) %></td>
        <td><%= link_to 'Destroy', trip_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

